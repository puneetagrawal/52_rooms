#forgot-password
  %h2= t(:forgot_password)
  %br
  %p
    Input email to resend your password.
  %br
  = form_for Spree::User.new, :as => :user, :url => spree.user_password_path do |f|
    %p
      = f.label :email, t(:email)
      %br/
      = f.email_field :email
    %p
      = f.submit t(:reset_password), :class => 'button primary'