.left
  %h5 Please Note
  %p you do not need to create a separate variant for this coupon to go on sale.
  = f.inputs :name => "Coupon Details" do
    = f.input :name
    = f.input :home_page_visibility
    = f.input :coupon_text
    = f.input :featured, :hint => "Show this on the homepage in the slider?"
    = f.input :description
    = f.input :coupon_type, :as => :select, :collection => Spree::Product::COUPON_TYPES
    - @product.available_on = @product.available_on.blank? ? Time.now : @product.available_on
    = f.input :search_coupon
    = f.input :sale_percent
    = f.input :available_on, :hint => "Available for sale on the site"
  = f.inputs :name => "Pricing and Inventory" do
    = f.input :coupon_cost_price
    = f.input :price, :as => :number
    = f.input :coupon_discount, :as => :number
    = f.input :coupon_policies
.right
  = f.inputs :name => "Rich Content" do
    - [:overview, :location_and_attractions, :rooms, :reviews, :amenities_html].each do |field|
      = f.input field, :input_html=>{:class=>"wysiwyg"}
